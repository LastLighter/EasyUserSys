DATABASE_URL=postgres://postgres:postgres@localhost:5432/easyusersys?sslmode=disable
SERVER_ADDR=:8080
COST_PER_UNIT=1
FREE_SIGNUP_POINTS=10
PREPAID_EXPIRY_DAYS=30
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_MONTHLY=price_monthly_xxx
STRIPE_PRICE_QUARTERLY=price_quarterly_xxx
STRIPE_CURRENCY=usd
SUBSCRIPTION_MONTHLY_POINTS=200
SUBSCRIPTION_QUARTERLY_POINTS=600

# JWT 认证配置
JWT_SECRET_KEY=your-secret-key-at-least-32-characters-long
JWT_EXPIRY_HOURS=168

# 服务间认证（用量上报）
USAGE_API_KEY=wearetranspdfteam

# Google OAuth 配置（多应用）
# 在 Google Cloud Console 创建 OAuth 2.0 凭据：https://console.cloud.google.com/apis/credentials
# - client_id: Google OAuth 客户端 ID
# - client_secret: Google OAuth 客户端密钥
# - redirect_url: 后端 OAuth 回调地址（需在 Google Console 中配置）
# - frontend_callback_url: 前端回调地址，OAuth 成功后重定向到此地址（携带 token 和 is_new_user 参数）
# GOOGLE_OAUTH_CONFIGS 示例：
# {"appA":{"client_id":"...","client_secret":"...","redirect_url":"https://api.appA.com/api/auth/google/callback","frontend_callback_url":"https://appA.com/auth/callback"},"appB":{"client_id":"...","client_secret":"...","redirect_url":"https://api.appB.com/api/auth/google/callback","frontend_callback_url":"https://appB.com/auth/callback"}}
GOOGLE_OAUTH_CONFIGS=

# 兼容旧配置（单应用）
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/google/callback

# Resend 邮件服务配置（用于验证码和找回密码）
# 在 Resend 获取 API Key：https://resend.com/api-keys
# API Key 和过期时间是共享的，发件人地址支持多应用配置
RESEND_API_KEY=re_xxx
VERIFICATION_CODE_EXPIRY_MINUTES=10

# 多应用邮件配置（按 system_code 区分发件人）
# RESEND_EMAIL_CONFIGS 示例：{"appA":{"from_email":"noreply@appA.com"},"appB":{"from_email":"noreply@appB.com"}}
RESEND_EMAIL_CONFIGS=

# 兼容旧配置（单应用，会作为 default 配置）
RESEND_FROM_EMAIL=noreply@yourdomain.com
